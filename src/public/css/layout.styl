// 顶部和页面底部通用布局
$layoutWidth = 980px
$pageBottom = 371px

// 顶部导航
#header
  // 导航下所有元素的高度
  $menuHeight = 3rem
  padding 10px 0 15px 0
  width $layoutWidth
  margin 0 auto
  overflow hidden
  display flex
  justify-content space-between
  // 左侧 logo
  #nav-logo
    // logo 图片
    .logo
      display block
      margin 0 auto
      width 9.38rem
      height $menuHeight
      background-position center
      background url('/images/said-logo2.png') no-repeat
  // 右侧导航菜单
  #nav
    float right
    position relative
    z-index 1
    // 导航文本内每个元素的宽度
    $menuItemHeight = 4.4rem
    #nav-menu // ul => li
      list-style none
      margin 0
      padding 0
      overflow hidden
      li
        float left
        $linkhighColor = #59c6ff
        &.nav-active
          a
            color $linkhighColor
        &:hover
          a
            color $linkhighColor
        a
          display block
          width $menuItemHeight
          text-align center
          line-height $menuHeight
          color #606060
    .line
      width $menuItemHeight
      border-bottom 1px solid #33b5e5
      position absolute
      bottom 0
      z-index 5
      transition all .2s ease-in-out 0s

// 页面骨架
.container
  position relative
  z-index 3
  background #fff
  // 每个页面顶部的大 banner
  .banner-bg
    $layoutWidth = 960px
    overflow hidden
    width 100%
    height 43.8rem
    text-align center
    position relative
    z-index 1
    .banner // ul
      width 100%
      height 100%
      position relative
      padding 0
      margin 0
      list-style none
      .banner-item // li
        width 100%
        height 100%
        position absolute
        top 0
        left 0
        overflow hidden
        text-align center
        background-position center bottom
        background-size 2110px 800px
        @media only screen and (min-width: 1442px)
          background-size 2560px 1100px
        // opacity 0
        z-index 1
        .banner-content
          margin 0 auto
          position absolute
          top 50%
          left 50%
          transform translate(-50%, -50%)
          padding .5rem 0 1rem
          text-align center
          width $layoutWidth
          max-height 380px
          // padding 20rem
          background url('/images/index_focus_bg.png') 100%
          .title, .context
            text-shadow 1px 1px 1px rgba(255,255,255,.6)
          .title
            margin 0
            font-size 2.2rem
            line-height 5rem
            font-weight normal
          .context
            p
              margin 0
              font-size 1.2rem
              line-height 2rem
        &.white
          .banner-content
            .title, .context
              color #fff
              text-shadow 1px 1px 1px rgba(0,0,0,.6)
#content
  padding 40px 0
  margin-bottom $pageBottom
  .said-content
    min-width 1000px
    max-width 1600px
    margin 0 auto
// 页面底部
#footer
  overflow hidden
  position fixed
  z-index 2
  height $pageBottom
  background none repeat scroll 0 0 #292929
  bottom 0
  left 0
  display block
  padding 2rem 0
  width 100%
  color #f1f1f1
  display flex
  flex-direction column
  a
    color #ccc
  .content
    flex 1
    display flex
    justify-content space-between
    width $layoutWidth
    font-size 1rem
    line-height 1.8rem
    margin 0 auto
    p
      margin 0
    .icon-at
      padding 0 .2rem
      font-size .9rem
    .footer-item
      flex 1
      .title
        font-size 1.3rem
        font-weight 600
        line-height 3rem
  .copyright
    width $layoutWidth
    margin 0 auto
    color #a3a2a2