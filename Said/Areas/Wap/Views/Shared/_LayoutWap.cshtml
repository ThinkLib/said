<!DOCTYPE html>
<html lang="zh-cn">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no">
    @{
        if (IsSectionDefined("meta"))
        {
            @RenderSection("meta");
        }
        else
        {
            <meta name="keywords" content="linkFly,Said,听说,tingshuo,blog,日志,博客,javascript,C#,Sql,nodeJS,music,音乐" />
            <meta name="description" content="听说，博客、音乐和技术分享、linkFly的个人博客，linkFly的音乐分享" />
        }
    }
    <meta http-equiv="description" content="听说 - linkFly" />
    <meta name="author" content="linkFly" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/wap/style/layout.css")" rel="stylesheet" />
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
    <link rel="bookmark" href="/favicon.ico" />
    <script src="@Url.Content("~/Content/Back/JavaScript/requirejs-2.1.15.js")"></script>
    <script src="@Url.Content("~/Content/Back/JavaScript/main.js?v=1")"></script>
    @{
        string actionName = ViewContext.RouteData.Values["action"].ToString();
        string controllerName = ViewContext.RouteData.Values["controller"].ToString();

    }
    @{
        if (IsSectionDefined("Css"))
        {
            @RenderSection("Css")
        }
    }
    @{
        if (IsSectionDefined("HeadJs"))
        {
            @RenderSection("HeadJs")
        }
    }
</head>
<body>
    <script>
    </script>
    <header class="navbar navbar-default navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button data-target="#example-navbar-collapse" data-toggle="collapse" class="navbar-toggle">
                        <span class="sr-only">切换的导航</span>
                        <span class="fa icon-bar"></span>
                        <span class="fa icon-bar"></span>
                        <span class="fa icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="/Back/">Said</a>
                </div>
                <ul class="nav pull-right">
                    <li class="dropdown pull-left">
                        <a href="javascript:;" class="dropdown-toggle">
                            <i class="fa fa-envelope"></i>
                            <span class="badge">1</span>
                        </a>
                    </li>
                    <li class="dropdown  pull-left">
                        <a href="/" class="dropdown-toggle">Said首页</a>
                    </li>
                </ul>
            </div>
        </div>
    </header>
    <section class="page-container">
        <section id="said-page">
            <header id="header">
                <div id="nav-logo">
                    <a class="logo" title="听说" href="/"></a>
                </div>
                <nav id="nav">
                    <ul id="nav-flip"></ul>
                </nav>
            </header>
            @RenderBody()
        </section>
    </section>
    <section id="said-page-mask"><section id="said-mask-box"></section></section>
    <footer></footer>
    <script src="@Url.Content("~/Content/Back/JavaScript/jQuery-2.1.1.js?v=1.0")"></script>
    <script src="@Url.Content("~/Content/Back/JavaScript/so/so.js")"></script>
    <script>
        var dateNow = '@Said.SaidCommon.GetTimeStamp()';
    </script>
    @{
        if (IsSectionDefined("FootJs"))
        {
            @RenderSection("FootJs")
        }
    }
</body>
</html>
